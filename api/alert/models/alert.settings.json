{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "alerts",
  "info": {
    "name": "Alert"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "TriggerTimestamp": {
      "type": "datetime",
      "required": true
    },
    "Reason": {
      "type": "string"
    },
    "fence_segment": {
      "model": "fence-segment"
    },
    "Type": {
      "model": "sensor-model"
    },
    "attachment": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "Details": {
      "type": "json"
    }
  }
}
