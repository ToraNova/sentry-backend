{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "fence_segments",
  "info": {
    "name": "FenceSegment"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "SegmentName": {
      "type": "string",
      "unique": false
    },
    "fence_host": {
      "via": "fence_segments",
      "model": "fence-host"
    },
    "SegmentUID": {
      "type": "uid",
      "required": true
    },
    "draw_lines": {
      "collection": "draw-line"
    },
    "Branch": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "ip_cameras": {
      "collection": "ip-camera",
      "via": "fence_segment"
    },
    "alert": {
      "model": "alert",
      "via": "fence_segment"
    }
  }
}
